
@{
    ViewBag.Title = "CourseCard";
    Layout = "~/Views/Shared/_LayoutCreate.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm("CourseCard", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2">選擇檔案</label>
            <div class="col-sm-10">
                <input type="file" name="file">
            </div>
        </div>
        <h1>Url : @ViewBag.Url</h1>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="提交" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

