@model Tachey001.ViewModel.Course.StepGroup


@using (Html.BeginForm("StepUnit", "Courses", new { id = ViewBag.Id, CourseId = ViewBag.CourseId }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-sm-11 m-4">
                <div class="row m-3 mb-3 border-bottom">
                    <div class="col-12 p-0">
                        <h2 for="basic-url" class="text-black-50">課程影片網址</h2>
                    </div>
                </div>
                <div class="row justify-content-center text-secondary">

                    @foreach (var ch in Model.courseChapter)
                    {
                        <div class="col-11 border my-1 py-2 chapterBox">
                            <h4>
                                <i class="fas fa-align-justify mr-2"></i>
                                <span class="chapterName">章節1</span>:
                                @Html.Label(ch.ChapterName)
                                <input type="text" class="w-25 chapterInput invisible" name="1" value="@ch.ChapterName">
                            </h4>
                            <hr>
                            <div class="unitBox">

                                @foreach (var un in Model.courseUnit)
                                {
                                    if (ch.ChapterID == un.ChapterID)
                                    {
                                        <h5 class="">
                                            <span>單元1</span> 影片 :
                                            <input type="text" class="w-50" name="1" value="@un.CourseURL">
                                            <input type="text" class="invisible w-25" name="1" value="@un.UnitName">
                                        </h5>
                                    }
                                }

                            </div>
                        </div>
                    }

                </div>
                <div class="row m-3">
                    <button type="submit" class="btn btn-outline-secondary btn-lg px-5">
                        儲存，下一步
                    </button>
                </div>
            </div>
            <div class="col-lg-4 col-sm-11 m-3 text-black-50 text-justify">
                <div class="row bg-light-gray px-3">
                    <div class="row p-4">
                        <h6 class="my-3">
                            <i class="far fa-lightbulb fa-2x hahow-dark-orange mr-2"></i>影片製作提醒
                        </h6>
                        <p class="line-height">
                            募資影片須附上字幕，並且注意影像畫面清晰、有流暢的口條、無噴 Mic 及背景雜音。 而影片中須包含課程目標，簡短內容介紹、自我介紹以及教學方式，並且注意畫面素材的使用版權。 送出審核前請確認內容符合『提案審核標準 - 影片』。
                        </p>
                        <a href=""
                           class="
                  w-100
                  text-right text-secondary text-decoration-none
                  my-3
                ">>> 詳細內容</a>
                    </div>
                    <div class="row p-4">
                        <h6 class="my-3">
                            <i class="far fa-lightbulb fa-2x hahow-dark-orange mr-2"></i>沒有拍攝經驗怎麼辦？
                        </h6>
                        <p class="line-height">
                            不同的課程領域有不同的影像呈現方式，選擇你最適合的影片拍攝方式吧！
                        </p>
                        <a href=""
                           class="
                  w-100
                  text-right text-secondary text-decoration-none
                  my-3
                ">>> 影片拍攝技巧</a>
                    </div>
                    <div class="row p-4">
                        <h6 class="my-3">
                            <i class="far fa-lightbulb fa-2x hahow-dark-orange mr-2"></i>需要攝影協助？
                        </h6>
                        <p class="line-height">
                            若你不擅長攝影，希望向 Hahow 申請課程製作服務，請詳看課程製作服務申請辦法，完成基本資料後向 Hahow 提出申請。
                        </p>
                        <a href=""
                           class="
                    w-100
                    text-right text-secondary text-decoration-none
                    my-3
                  ">>> 攝影服務</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

}