<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="nav justify-content-between">
                <div class="searchcourse">
                    <input class="rounded-pill border"
                           type="search"
                           id="site-search"
                           name="q"
                           placeholder=" 熱門搜尋 : procreate" />
                    <button class="search-btn"> <i class="fas fa-search px-2"></i></button>
                </div>

                <div class="sortcourse">
